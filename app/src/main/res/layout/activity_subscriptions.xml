<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SubscriptionsActivity">

    <TextView
        android:id="@+id/subscriptionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Subscription status: checking."
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subscriptionStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Use menu, top right of screen, to update subscriptions.\n\nUse the retry subscription checks if they fail."
        app:layout_constraintTop_toBottomOf="@id/subscriptionStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>